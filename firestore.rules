rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow full access to discounts (for admin panel)
    match /discounts/{discountId} {
      allow read, write: if true;
    }
    
    // Allow full access to products (for admin panel)
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Allow full access to orders (for admin panel)
    match /orders/{orderId} {
      allow read, write: if true;
    }
    
    // Allow full access to loyalty rules (for admin panel)
    match /loyaltyRules/{ruleId} {
      allow read, write: if true;
    }
    
    // Allow full access to user points (for admin panel)
    match /userPoints/{userId} {
      allow read, write: if true;
    }
    
    // Allow full access to loyalty profiles (for admin panel sync)
    match /loyaltyProfiles/{userId} {
      allow read, write: if true;
    }
    
    // Allow full access to points transactions (for admin panel)
    match /pointsTransactions/{transactionId} {
      allow read, write: if true;
    }
    
    // Default: read for all, write for authenticated users
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
